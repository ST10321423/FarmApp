@model FarmApp.Models.Product
@{
    ViewBag.Title = "AddProduct";
}
<div class="container mt-4">
    <h2>AddProduct</h2>
    <div class="card p-4">
        @using (Html.BeginForm())
        {

            <div>
                @Html.LabelFor(m => m.Name)
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
            </div>
            <div>
                @Html.LabelFor(m => m.Category)
                @Html.TextBoxFor(m => m.Category, new { @class = "form-control" })
            </div>
            <div>
                @Html.LabelFor(m => m.Price)
                @Html.TextBoxFor(m => m.Price, new { @class = "form-control", type = "number", step = "0.01" })
            </div>
            <div>
                @Html.LabelFor(m => m.ProductionDate)
                @Html.TextBoxFor(m => m.ProductionDate, new { @class = "form-control", type = "date" })
            </div>
            <div>
                <label>Upload Image:</label>
                <input type="file" name="productImage" accept="image" />
            </div>

            <button type="submit" class="btn btn-success">Add Product</button>
        }
    </div>
</div>
